{
  "name": "electron-build-app",
  "version": "1.1.0",
  "main": "src/main.js",
  "description": "Лабораторна робота з Electron",
  "author": "Vladyslav Malohlovets",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.electronbuild",
    "productName": "MyUpdatedElectronApp",
    "directories": {
      "output": "build-output"
    },
    "files": [
      "src/**/*",
      "index.html",
      "style.css",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    }
  },
  "dependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
